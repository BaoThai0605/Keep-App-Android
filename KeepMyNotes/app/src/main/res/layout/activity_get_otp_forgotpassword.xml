<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.LoginForm"
    android:orientation="vertical"
    android:gravity="center">
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgound2"

        />

    <LinearLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.LoginForm"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/androidgyne"
            android:gravity="center"
            android:text="Note App Lá»±c"
            android:textColor="#EEB0B0"
            android:textSize="60sp"
            />

        <TextView
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFE59D"
            android:textSize="30sp"
            android:text="Forgot password"
            android:fontFamily="@font/androidgyne" />
        <LinearLayout

            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:text="Phone number:"
                android:textColor="#EEB0B0"
                android:textSize="20sp"/>
            <EditText
                android:digits="0123456789"
                android:inputType="number"
                android:id="@+id/phone_fgpw"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Please enter phone number "
                android:fontFamily="@font/androidgyne"
                android:textColor="#BDE6F1"
                android:textColorHint="@color/white"/>

            <Button
                android:id="@+id/btngetOTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#EEB0B0"
                android:textColor="@color/white"
                android:text="GET OTP"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
</RelativeLayout>