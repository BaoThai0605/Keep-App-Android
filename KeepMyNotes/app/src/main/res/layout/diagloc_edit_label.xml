<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="#FFFBE7"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Labels"
        android:padding="9dp"
        android:textColor="#40DFEF"
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/androidgyne"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"

        android:orientation="vertical"
        android:background="#FFFBE7">
        <EditText
            android:digits=" 0123456789qwertzuiopasdfghjklyxcvbnm"
            android:id="@+id/nameEditlabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name label"
            android:textColorHint="#82DBD8"
            android:textColor="#82DBD8"
            android:fontFamily="@font/androidgyne"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cancel_Edit_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#E78EA9"
            android:layout_margin="5dp"
            android:text="Cancel"
            android:fontFamily="@font/androidgyne"/>

        <Button
            android:id="@+id/ok_Edit_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E78EA9"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="OK"
            android:fontFamily="@font/androidgyne"/>


    </LinearLayout>



</LinearLayout>